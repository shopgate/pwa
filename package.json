{
  "name": "@shopgate/pwa-unit-test",
  "version": "1.2.5",
  "description": "Shopgate's Unit Test setup for PWAs.",
  "repository": "shopgate/pwa-unit-test",
  "bugs": "https://github.com/shopgate/pwa-unit-test/issues",
  "homepage": "https://github.com/shopgate/pwa-unit-test",
  "license": "Apache-2.0",
  "keywords": [
    "jest",
    "react",
    "unittest",
    "shopgate"
  ],
  "scripts": {
    "lint": "eslint --parser babel-eslint --ignore-path .gitignore  --ext .js .",
    "precommit": "lint-staged",
    "postversion": "git push && git push --tags && npm publish --access public"
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.js": "eslint --parser babel-eslint --ignore-path .gitignore  --ext .js ."
    }
  },
  "pre-commit": [
    "precommit"
  ],
  "dependencies": {
    "babel-jest": "^22.0.3",
    "babel-preset-es2015": "^6.24.1",
    "cheerio": "^1.0.0-rc.2",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.0.3",
    "jest-enzyme": "^4.0.1",
    "js-yaml": "^3.10.0",
    "react-test-renderer": "^16.2.0",
    "strip-json-comments": "^2.0.1"
  },
  "devDependencies": {
    "@shopgate/eslint-config": "^1.0.3",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "lint-staged": "^6.0.0",
    "pre-commit": "^1.2.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-tap-event-plugin": "^3.0.2"
  },
  "peerDependencies": {
    "react": "16.x",
    "react-dom": "16.x",
    "react-tap-event-plugin": "3.x"
  }
}
